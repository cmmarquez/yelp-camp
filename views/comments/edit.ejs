<% include ../partials/header %>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h4 class="mb-3">Edit Comment</h4>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="sr-only" for="comment">Comment</label>
                <textarea class="form-control" id="comment" name="comment[text]" required
                          rows="3"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-lg btn-primary">Submit</button>
            </div>
        </form>
        <div class="mb-4">
            <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>