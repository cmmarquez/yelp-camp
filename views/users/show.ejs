<% include ../partials/header %>

<div class="row">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title"><%= user.firstName + " " + user.lastName %>'s Campgrounds</h4>
                <hr class="my-2">
                <div>
                    <%= user.phoneNumber %>
                </div>
                <a href="mailto:<%= user.email %>"><%= user.email %></a>
            </div>
        </div>
    </div>
</div>
<div class="row text-center">
    <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img alt="<%= campground.name %>" class="card-img-top" src="<%= campground.image %>">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>">More Info</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<% include ../partials/footer %>