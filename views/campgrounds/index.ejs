<% include ../partials/header %>

<div class="jumbotron">
    <h1 class="display-4">Welcome to YelpCamp!</h1>
    <p class="lead">View our hand-picked campgrounds from all over the world.</p>
    <a class="btn btn-lg btn-success" href="/campgrounds/new">Add a New Campground</a>
    <p>
    <form action="/campgrounds" method="GET">
        <div class="form-group">
            <% if(campgrounds && campgrounds.length > 0 ) { %>
                <input class="form-control" name="search" onChange="this.form.submit()" placeholder="Search Campgrounds"
                       type="text">
            <% } %>
        </div>
    </form>
    </p>
</div>
<div class="row text-center">
    <div class="col-12">
        <% if(noMatch !== null) { %>
            <h3 class="mb-3"><%= noMatch %></h3>
            <a class="btn btn-lg btn-success" href="/campgrounds">View All Campgrounds</a>
        <% } %>
    </div>
    <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img alt="<%= campground.name %>" class="card-img-top" src="<%= campground.image %>">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>">More Info</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<% include ../partials/footer %>

